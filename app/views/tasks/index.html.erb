<h1>Tasks#index</h1>

<body>
    <%= link_to "新規登録",  new_task_path %>
    <table class="table table-hover">
            
            <tr>
                <th><%= Task.human_attribute_name(:name) %></th>
                <th><%= Task.human_attribute_name(:created_at) %></th>
            </tr>
        <tbody>
            <% @tasks.each do |task|%>
            <tr>
                <td><%= task.name %></td>
                <td><%= task.description %></td>
            <% end %>
            </tr>
        </tbody>
    </table>
</body>